[user]
    name = David Szotten
    email = davidszotten@gmail.com

[core]
    editor = vim
    pager = less -r
    excludesfile = ~/.gitignore

[color]
    ui = true

[alias]
    co = checkout
    lol = log --pretty=oneline --abbrev-commit --graph --decorate --all
    st = status -sb
    word-diff = diff --color-words --word-diff-regex='[A-z_][A-z_]+'
    diffi = diff --ignore-space-at-eol
    latest = rev-parse HEAD
    latest-tag = describe --abbrev=0

[push]
    default = current

[advice]
    statusHints = false
